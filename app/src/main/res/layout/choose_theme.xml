<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTheme">

    <RadioGroup
        android:id="@+id/theme_choose"
        android:layout_width="398dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="2dp"
        android:text="@string/lightOn"
        app:layout_constraintStart_toStartOf="@+id/theme_choose"
        app:layout_constraintTop_toBottomOf="@+id/theme_choose" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="136dp"
        android:text="@string/darkOn"
        app:layout_constraintEnd_toEndOf="@+id/theme_choose"
        app:layout_constraintTop_toBottomOf="@+id/theme_choose" />

</androidx.constraintlayout.widget.ConstraintLayout>